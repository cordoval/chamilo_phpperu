<?xml version="1.0" encoding="UTF-8"?>
<application name="user">
	<settings>
		<category name="general">
			<setting name="allow_user_language_selection" field="checkbox"
				default="1">
				<options type="static">
					<option name="allow_user_language_selection" value="1" />
				</options>
			</setting>
			<setting name="allow_change_username" field="checkbox" default="1">
				<options type="static">
					<option name="allow_change_username" value="1" />
				</options>
			</setting>
			<setting name="allow_change_firstname" field="checkbox" default="1">
				<options type="static">
					<option name="allow_change_firstname" value="1" />
				</options>
			</setting>
			<setting name="allow_change_lastname" field="checkbox" default="1">
				<options type="static">
					<option name="allow_change_lastname" value="1" />
				</options>
			</setting>
			<setting name="allow_change_email" field="checkbox" default="1">
				<options type="static">
					<option name="allow_change_email" value="1" />
				</options>
			</setting>
			<setting name="allow_change_phone" field="checkbox" default="1">
				<options type="static">
					<option name="allow_change_phone" value="1" />
				</options>
			</setting>
			<setting name="allow_change_official_code" field="checkbox"
				default="1">
				<options type="static">
					<option name="allow_change_official_code" value="1" />
				</options>
			</setting>
			<setting name="allow_change_password" field="checkbox" default="1">
				<options type="static">
					<option name="allow_change_password" value="1" />
				</options>
			</setting>
			<setting name="allow_buddy_management" field="checkbox"
				default="1">
				<options type="static">
					<option name="allow_buddy_management" value="1" />
				</options>
			</setting>
		</category>
		<category name="form">
			<setting name="allow_user_change_platform_timezone" field="checkbox" default="1">
				<options type="static">
					<option name="allow_user_change_platform_timezone" value="1" />
				</options>
			</setting>
			<setting name="allow_user_change_platform_language" field="checkbox" default="1">
				<options type="static">
					<option name="allow_user_change_platform_language" value="1" />
				</options>
			</setting>
			<setting name="allow_user_change_theme" field="checkbox" default="1">
				<options type="static">
					<option name="allow_user_change_theme" value="1" />
				</options>
			</setting>
		</category>
		<category name="registration">
			<setting name="allow_registration" field="radio" default="1">
				<options type="static">
					<option name="after_aproval" value="2" />
					<option name="true" value="1" />
					<option name="false" value="0" />
				</options>
			</setting>
			<setting name="allow_teacher_registration" field="checkbox"
				default="1">
				<options type="static">
					<option name="allow_teacher_registration" value="1" />
				</options>
			</setting>
			<setting name="enable_terms_and_conditions" field="checkbox" default="1">
				<options type="static">
					<option name="enable_terms_and_conditions" value="1" />
				</options>
			</setting>
			<setting name="allow_password_retrieval" field="checkbox"
				default="1">
				<options type="static">
					<option name="allow_password_retrieval" value="1" />
				</options>
			</setting>
			<setting name="require_official_code" field="checkbox" default="1">
				<options type="static">
					<option name="require_official_code" value="1" />
				</options>
			</setting>
			<setting name="require_email" field="checkbox" default="1">
				<options type="static">
					<option name="require_email" value="1" />
				</options>
			</setting>
			<setting name="require_language" field="checkbox" default="1">
				<options type="static">
					<option name="require_language" value="1" />
				</options>
			</setting>
			<setting name="days_valid" field="text" default="366" />
				<validations>
                    <validation rule="numeric" message="MustBeNumeric"/>
                </validations>
            </setting>
			<setting name="show_email_addresses" field="checkbox" default="1">
				<options type="static">
					<option name="show_email_addresses" value="1" />
				</options>
			</setting>
			<setting name="email_template" field="html_editor"
				default="[username] - [password]" />
		</category>
		<category name="visual">
			<setting name="allow_user_theme_selection" field="checkbox"
				default="1">
				<options type="static">
					<option name="allow_user_theme_selection" value="1" />
				</options>
			</setting>
			<setting name="allow_change_user_picture" field="checkbox"
				default="1">
				<options type="static">
					<option name="allow_change_user_picture" value="1" />
				</options>
			</setting>
		</category>
		<category name="fullname">
			<setting name="fullname_format" field="select" default="0">
				<options type="dynamic" source="get_fullname_formats" />
			</setting>
		</category>
	</settings>
</application>