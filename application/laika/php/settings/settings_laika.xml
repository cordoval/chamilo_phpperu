<?xml version="1.0" encoding="UTF-8"?>
<application name="laika">
	<settings>
		<category name="attempts">
			<setting name="maximum_attempts" field="text" default="1">
				<validations>
					<validation rule="numeric" message="MustBeNumeric" />
				</validations>
			</setting>
		</category>
		<category name="repository">
			<setting name="allow_save" field="radio" default="0">
				<options type="static">
					<option name="true" value="1" />
					<option name="false" value="0" />
				</options>
			</setting>
		</category>
	</settings>
</application>